{
  "manifest_version": 3,
  "name": "ApplyFlow - Job Application Tracker",
  "version": "1.0.0",
  "description": "Track and manage your job applications from LinkedIn and Indeed in one place",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://www.indeed.com/*"
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/jobs/*",
        "https://www.indeed.com/viewjob*",
        "https://www.indeed.com/rc/clk*"
      ],
      "js": ["content/content.js"]
    }
  ]
}
