{
  "manifest_version": 3,
  "name": "ApplyFlow - Job Application Tracker",
  "version": "1.1.0",
  "description": "Track and manage your job applications from LinkedIn, Indeed, Glassdoor, Dice, and more in one place",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://www.indeed.com/*",
    "https://www.indeed.ca/*",
    "https://wellfound.com/*",
    "https://angel.co/*",
    "https://*.builtin.com/*",
    "https://www.ziprecruiter.com/*",
    "https://www.workopolis.com/*",
    "https://www.jobbank.gc.ca/*",
    "https://www.dice.com/*",
    "https://www.glassdoor.com/*",
    "https://www.glassdoor.ca/*"
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/jobs/*",
        "https://www.indeed.com/viewjob*",
        "https://www.indeed.com/rc/clk*",
        "https://www.indeed.ca/viewjob*",
        "https://www.indeed.ca/rc/clk*",
        "https://wellfound.com/jobs/*",
        "https://wellfound.com/l/*",
        "https://angel.co/jobs/*",
        "https://*.builtin.com/job/*",
        "https://www.ziprecruiter.com/c/*/*",
        "https://www.ziprecruiter.com/ojob/*",
        "https://www.workopolis.com/jobsearch/job/*",
        "https://www.jobbank.gc.ca/jobsearch/jobposting/*",
        "https://www.dice.com/jobs/detail/*",
        "https://www.dice.com/job-detail/*",
        "https://www.glassdoor.com/job-listing/*",
        "https://www.glassdoor.com/partner/jobListing.htm*",
        "https://www.glassdoor.ca/job-listing/*",
        "https://www.glassdoor.ca/partner/jobListing.htm*"
      ],
      "js": ["content/content.js"]
    }
  ]
}
